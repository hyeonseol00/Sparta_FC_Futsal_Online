generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Character {
  id            Int             @id @default(autoincrement())
  name          String
  appearance    String
  health        Int             @default(500)
  power         Int             @default(100)
  ownerId       Int
  User          User            @relation(fields: [ownerId], references: [id])
  CharacterItem CharacterItem[]

  @@index([ownerId], map: "Character_ownerId_fkey")
}

model CharacterItem {
  id          Int       @id @default(autoincrement())
  characterId Int
  itemId      Int
  Character   Character @relation(fields: [characterId], references: [id])
  Item        Item      @relation(fields: [itemId], references: [id])

  @@index([characterId], map: "CharacterItem_characterId_fkey")
  @@index([itemId], map: "CharacterItem_itemId_fkey")
}

model Item {
  id            Int             @id @default(autoincrement())
  itemCode      Int             @unique
  itemName      String
  itemStatId    Int
  price         Float
  CharacterItem CharacterItem[]
  ItemStat      ItemStat        @relation(fields: [itemStatId], references: [id])

  @@index([itemStatId], map: "Item_itemStatId_fkey")
}

model ItemStat {
  id     Int    @id @default(autoincrement())
  health Int
  power  Int
  Item   Item[]
}

model User {
  id        Int         @id @default(autoincrement())
  username  String      @unique
  password  String
  Character Character[]
}
